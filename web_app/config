server {
  listen       80;
  server_name  localhost;
  root   /home/rtt;
  #charset koi8-r;
  #access_log  /var/log/nginx/log/host.access.log  main;

  location / {
      index  index.html index.htm;
  }

  location ~ ^/(scripts|styles)/(.*)$ {
    #root .tmp/;
    error_page 404 =200 @asset_pass;
    try_files $uri =404;
    break;
  }

}
